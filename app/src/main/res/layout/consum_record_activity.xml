<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeef4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#535456">

        <Button
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/record" />

        <Button
            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/setting"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/user_name" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:editable="false"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:editable="false"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/ac_contact_tel" />

                <EditText
                    android:id="@+id/contact_tel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@android:color/black" />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/ae_update_type" />

                    <EditText
                        android:id="@+id/update_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/ae_id" />

                    <EditText
                        android:id="@+id/id_card"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/detail_bank" />

                    <EditText
                        android:id="@+id/bank"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/detail_bank_card" />

                    <EditText
                        android:id="@+id/bank_card"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/detail_bank_name" />

                    <EditText
                        android:id="@+id/bank_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/detail_sum" />

                <EditText
                    android:id="@+id/consume_money"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@android:color/black" />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="5dp"
                        android:text="@string/discount_type" />

                    <EditText
                        android:id="@+id/discount_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@android:color/black" />
                </LinearLayout>

                <View style="@style/view_line_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/discount" />

                <EditText
                    android:id="@+id/discount_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@android:color/black" />
            </LinearLayout>

            <View style="@style/view_line_style" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#efeef4"
        >

        <Button
            android:id="@+id/discount"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@anim/btn_style"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerInParent="true"
            android:text="@string/discount" />
    </RelativeLayout>

</LinearLayout>
