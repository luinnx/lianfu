<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#535456">

        <Button
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="返利列表" />

        <!--<Button
            android:id="@+id/add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add" />-->

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        style="@style/view_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout android:id="@+id/id"
                style="@style/consum_top_style">

                <TextView
                    style="@style/consum_top_text_style"
                    android:text="用户ID" />

                <ImageView
                    style="@style/consum_top_img_style"
                    android:background="@drawable/list_sort" />
            </LinearLayout>

            <LinearLayout android:id="@+id/fee"
                style="@style/consum_top_style"
                android:layout_marginLeft="8dp">

                <TextView
                    style="@style/consum_top_text_style"
                    android:text="消费金额" />

                <ImageView
                    style="@style/consum_top_img_style"
                    android:background="@drawable/list_sort" />
            </LinearLayout>

            <LinearLayout android:id="@+id/repay"
                style="@style/consum_top_style"
                android:layout_marginLeft="8dp">

                <TextView
                    style="@style/consum_top_text_style"
                    android:text="返利" />

                <ImageView
                    style="@style/consum_top_img_style"
                    android:background="@drawable/list_sort" />
            </LinearLayout>

            <LinearLayout android:id="@+id/time"
                style="@style/consum_top_style"
                android:layout_marginLeft="8dp">

                <TextView
                    style="@style/consum_top_text_style"
                    android:text="结算日期" />

                <ImageView
                    style="@style/consum_top_img_style"
                    android:background="@drawable/list_sort" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/view_line_style" />

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
