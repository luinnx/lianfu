<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content"
        style="@style/title_bar_style"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/double_code"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/double_code" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="@string/personal" />

        <Button
            android:id="@+id/chat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/chat" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@anim/fragment_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@null"
                            android:src="@drawable/me_head_bg" />

                        <com.tangpo.lianfu.utils.CircularImage
                            android:id="@+id/img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerInside" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:text="权限" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:text="姓名" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/next"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View style="@style/view_line_style" />

            <TextView
                android:id="@id/personal_info"
                style="@style/manager_personal_style"
                android:text="@string/personal_msg" />

            <View style="@style/view_line_style" />

            <TextView
                android:id="@+id/shop_info"
                style="@style/manager_personal_style"
                android:text="@string/shop_info" />

            <View style="@style/view_line_style" />

            <TextView
                android:id="@+id/discount_manage"
                style="@style/manager_personal_style"
                android:text="@string/discount_manage" />

            <View style="@style/view_line_style" />

            <TextView
                android:id="@+id/update_type"
                style="@style/manager_personal_style"
                android:text="@string/mem_update" />

            <View style="@style/view_line_style" />

            <TextView
                android:id="@+id/modify_pass"
                style="@style/manager_personal_style"
                android:background="@android:color/white"
                android:text="@string/modify_pass" />

            <View style="@style/view_line_style" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
