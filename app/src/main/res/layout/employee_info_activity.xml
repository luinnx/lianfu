<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#535456">

        <Button
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/employee_info" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/setting"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
    </LinearLayout>

    <View android:layout_marginTop="5dp"
        style="@style/view_line_style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/ae_manage_level" />

                <Spinner
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/manage_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/manage_level" />
            </RelativeLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/user_name" />

                <EditText
                    android:id="@+id/user_name"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/ac_contact_tel" />

                <EditText
                    android:id="@+id/contact_tel"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/ae_rel_name" />

                <EditText
                    android:id="@+id/rel_name"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/sex" />

                <Spinner
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/sex" />
            </RelativeLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/ae_id" />

                <EditText
                    android:id="@+id/id_card"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/detail_bank" />

                <EditText
                    android:id="@+id/bank"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/detail_bank_card" />

                <EditText
                    android:id="@+id/bank_card"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

            <View style="@style/view_line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5dp"
                    android:text="@string/detail_bank_name" />

                <EditText
                    android:id="@+id/bank_name"
                    style="@style/manager_personal_style"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@android:color/black" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
